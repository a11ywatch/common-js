{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "lib": ["dom", "es2015"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist/",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
